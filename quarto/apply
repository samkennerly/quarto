#!/usr/bin/env python3

from argparse import ArgumentParser

from quarto import Quarto

opt = ArgumentParser()
opt.description = "Apply selected style to website."
arg = opt.add_argument
arg("STYLE", default="style", nargs="?", help="read CSS files from STYLE folder")
arg("TARGET", default="target", nargs="?", help="write to TARGET/" + Quarto.CSSPATH)
opt = opt.parse_args()

Quarto.apply(opt.STYLE, opt.TARGET)
