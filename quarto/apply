#!/usr/bin/env python3

from argparse import ArgumentParser

from quarto import Quarto

opt = ArgumentParser()
opt.description = "Apply selected style to built pages."
opt.add_argument(
    "STYLE",
    default="style",
    nargs="?",
    help="read CSS from this folder"
)
opt.add_argument(
    "TARGET",
    default="target",
    nargs="?",
    help="save {} to this folder".format(Quarto.CSSPATH)
)
opt = opt.parse_args()
print(opt.STYLE, "by any other name would style as sheet.")

Quarto.apply(opt.STYLE, opt.TARGET)
print("Exeunt.")
